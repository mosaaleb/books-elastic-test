<div class="bg-blue-400 h-screen w-screen">
  <div class="flex flex-col items-center flex-1 h-full justify-center px-4 sm:px-0">
    <div class="flex rounded shadow-lg w-full sm:w-3/4 lg:w-1/2 bg-white sm:mx-0" style="height: 500px">
      <div class="flex flex-col w-full md:w-1/2 p-4">
        <div class="flex flex-col flex-1 justify-center mb-8">
          <h1 class="text-4xl text-center font-thin">Welcome Back</h1>
          <div class="w-full mt-4">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-horizontal w-3/4 mx-auto") do |f| %>
              <div class="flex flex-col mt-4">
                <%= f.text_field :email,
                                  autofocus: true,
                                  placeholder: "Email",
                                  autocomplete: "email",
                                  class: "flex-grow p-3 mb-4 border rounded border-grey-400" %>
              </div>
              <div class="flex flex-col mt-4">
                <%= f.password_field :password,
                                      placeholder: "Password",
                                      autocomplete: "current-password",
                                      class: "flex-grow p-3 mb-4 rounded border border-grey-400" %>
              </div>
              <% if devise_mapping.rememberable? %>
                <div class="flex items-center mt-4">
                  <%= f.check_box :remember_me, class: 'mr-2' %>
                  <%= f.label :remember_me, class: 'text-sm text-gray-dark' %>
                </div>
              <% end %>
              <div class="flex flex-col mt-8">
                <%= f.submit "Log in", class: "bg-blue-500 hover:bg-blue-700 text-white text-sm font-semibold py-2 px-4 rounded" %>
              </div>
            <% end %>
            <div class="text-center mt-4">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
      <div class="hidden md:block md:w-1/2 rounded-r" style="background: url('https://images.unsplash.com/photo-1515965885361-f1e0095517ea?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=3300&q=80'); background-size: cover; background-position: center center;"></div>
    </div>
  </div>
</div>
