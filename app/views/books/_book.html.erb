<div class="flex m-5 bg-gray-100 rounded shadow-lg">
  <div>
    <%= image_tag book.cover.variant(resize: '100x150!') %>
  </div>
  <div class="px-6 py-4">
    <div class="mb-2 text-xl font-bold">
      <%= book.title %>
    </div>

    <p class="text-base text-gray-700">
      <%= truncate(book.description, length: 70) %>
    </p>

    <%= book_addition_button(book) %>

    <%= book_status(show_book_status) do %>
      <%= select(:book_addition, :status, statuses_options, selected: book.status) %>
    <% end %>
  </div>
</div>
